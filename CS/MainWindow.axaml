<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLauncher"
        mc:Ignorable="d"
        x:Class="GameLauncherCS.MainWindow"
        Title="Games Launcher"
        Width="720" Height="380"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        SystemDecorations="None"
        Background="White">
    
    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Styles>

    <DockPanel Background="White">
        <!-- Кастомный тулбар -->
        <Border Height="32"
                Background="White"
                DockPanel.Dock="Top"
                x:Name="ToolBar">
            <Grid Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Games"
                          FontSize="20"
                          FontFamily="Impact"
                          Foreground="Black"
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"/>
                
                <!-- Кнопка настроек -->
                <Button Grid.Column="1"
                        Width="36" Height="32"
                        Background="White"
                        Foreground="Black"
                        FontSize="20"
                        FontWeight="Bold"
                        Content="*"
                        Margin="0"
                        Click="ButtonSettings_Click"
                        x:Name="ButtonSettings">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </Button.Styles>
                </Button>
                
                <!-- Кнопка сворачивания -->
                <Button Grid.Column="2"
                        Width="36" Height="32"
                        Background="White"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="Bold"
                        Content="_"
                        Margin="0"
                        Click="ButtonMinimize_Click"
                        x:Name="ButtonMinimize">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </Button.Styles>
                </Button>
                
                <!-- Кнопка закрытия -->
                <Button Grid.Column="3"
                        Width="36" Height="32"
                        Background="White"
                        Foreground="Black"
                        FontSize="16"
                        FontWeight="Bold"
                        Content="✕"
                        Margin="0"
                        Click="ButtonClose_Click"
                        x:Name="ButtonClose">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
        </Border>
        
        <!-- Контейнер для игровых кнопок -->
        <Border Background="White"
                DockPanel.Dock="Top"
                Height="1">  <!-- Тонкая белая линия между тулбаром и кнопками -->
        </Border>
        
        <!-- Основная область с играми -->
        <Border Background="White"
                Margin="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <WrapPanel Margin="10"
                          x:Name="GamesPanel">
                    <!-- Кнопки будут добавляться динамически -->
                </WrapPanel>
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>